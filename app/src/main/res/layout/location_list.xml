<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/locations_name"
        style="@style/TextView"
        android:layout_toRightOf="@id/image"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="sans-serif" />


    <ImageView
        android:id="@+id/location_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_place_24"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/locations_name" />

    <TextView
        android:id="@+id/location_address"
        style="@style/TextView"
        android:layout_below="@id/locations_name"
        android:layout_toRightOf="@id/location_icon"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/description_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_notes_24"
        android:layout_below="@id/image" />

    <TextView
        android:id="@+id/description"
        style="@style/TextView"
        android:layout_below="@id/image"
        android:textColor="#000000"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/phone_number"
        style="@style/TextView"
        android:layout_below="@id/w_hours"
        android:textColor="#0288D1"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp" />


    <ImageView
        android:id="@+id/phone_number_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_local_phone_24"
        android:layout_below="@id/w_hours"
        android:layout_toStartOf="@id/phone_number"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:id="@+id/w_hours_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_access_time_24"
        android:layout_below="@id/description"
        android:layout_toLeftOf="@id/description"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/w_hours"
        android:textColor="#000000"
        style="@style/TextView"
        android:layout_below="@id/description"
        android:layout_toRightOf="@id/description_icon"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/money_icon"
        style="@style/ImageView"
        android:src="@drawable/ic_baseline_attach_money_24"
        android:layout_below="@id/description_icon"
        android:layout_toLeftOf="@id/description"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/hide_button"
        style="@style/ImageView"
        android:layout_marginRight="8dp"
        android:layout_below="@id/location_address"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/show_more_button"
        style="@style/ImageView"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_below="@id/hide_button"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>